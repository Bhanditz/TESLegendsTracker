    <TextView
        android:id="@+id/magicka_costs_5_label"
        style="@style/MagickaCostsText"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@id/magicka_costs_4_label"
        android:text="5"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_5"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
