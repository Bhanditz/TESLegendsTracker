        android:background="@drawable/xml_magicka_costs_bar" />

    <TextView
        android:id="@+id/magicka_costs_7_plus_label"
        style="@style/MagickaCostsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@id/magicka_costs_6_label"
        android:text="7+"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_7_plus"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
        android:layout_above="@id/magicka_costs_7_plus_label"
        android:layout_alignStart="@id/magicka_costs_7_plus_label"
        android:background="@drawable/xml_magicka_costs_bar" />

</RelativeLayout>