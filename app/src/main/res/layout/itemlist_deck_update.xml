<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_all_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_marginTop="@dimen/status_bar_height">

    <TextView
        android:id="@+id/deck_update_title"
        style="@style/DeckInfoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_updated_at"
        android:text="2017-02-10" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/deck_update_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/itemlist_decklist_slot" />

</LinearLayout>