<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/patch_card_old_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height"
        android:layout_weight="1"
        tools:src="@drawable/card" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/size_medium"
            android:layout_height="@dimen/size_medium"
            android:src="@drawable/ic_arrow_forward_blue" />

        <TextView
            android:id="@+id/patch_card_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:gravity="center"
            tools:text="Change\nText" />

    </LinearLayout>

    <ImageView
        android:id="@+id/patch_card_new_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height"
        android:layout_weight="1"
        tools:src="@drawable/card" />

</LinearLayout>