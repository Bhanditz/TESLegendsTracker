<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/class_view_attr1"
        android:layout_width="@dimen/size_tiny"
        android:layout_height="@dimen/size_tiny"
        android:layout_marginStart="@dimen/default_margin"
        tools:src="@drawable/attr_strength" />

    <ImageView
        android:id="@+id/class_view_attr2"
        android:layout_width="@dimen/size_tiny"
        android:layout_height="@dimen/size_tiny"
        android:layout_marginStart="@dimen/small_margin"
        tools:src="@drawable/attr_intelligence" />

    <TextView
        android:id="@+id/class_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:gravity="center"
        android:padding="@dimen/nano_margin"
        android:textColor="@color/primary_text_dark"
        android:visibility="invisible"
        tools:text="Battlemage" />

</LinearLayout>