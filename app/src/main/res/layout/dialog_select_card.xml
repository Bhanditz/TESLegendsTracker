<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_margin"
    app:cardCornerRadius="@dimen/default_margin"
    app:cardElevation="@dimen/card_elevation"
    tools:layout_marginTop="@dimen/status_bar_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ediposouza.teslesgendstracker.ui.widget.FilterAttr
            android:id="@+id/select_card_dialog_attr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <com.ediposouza.teslesgendstracker.ui.cards.widget.FilterRarity
            android:id="@+id/select_card_dialog_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_card_dialog_attr"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/default_margin" />

        <com.ediposouza.teslesgendstracker.ui.cards.widget.FilterMagika
            android:id="@+id/select_card_dialog_magika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/default_margin" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/select_card_dialog_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/select_card_dialog_rarity"
            android:layout_toStartOf="@id/select_card_dialog_magika"
            android:fadeScrollbars="false"
            android:padding="@dimen/default_margin"
            android:scrollbarSize="@dimen/small_margin"
            android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
            android:scrollbars="vertical"
            app:layoutManager="StaggeredGridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/itemlist_card" />

    </RelativeLayout>

</android.support.v7.widget.CardView>