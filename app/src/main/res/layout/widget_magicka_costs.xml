        android:background="@drawable/xml_magicka_costs_bar" />

    <TextView
        android:id="@+id/magicka_costs_2_label"
        style="@style/MagickaCostsText"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@id/magicka_costs_1_label"
        android:text="2"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_2"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
        android:layout_above="@id/magicka_costs_2_label"
        android:layout_alignStart="@id/magicka_costs_2_label"
        android:background="@drawable/xml_magicka_costs_bar" />

    <TextView
        android:id="@+id/magicka_costs_3_label"
        style="@style/MagickaCostsText"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@id/magicka_costs_2_label"
        android:text="3"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_3"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
        android:layout_above="@id/magicka_costs_3_label"
        android:layout_alignStart="@id/magicka_costs_3_label"
        android:background="@drawable/xml_magicka_costs_bar" />

    <TextView
        android:id="@+id/magicka_costs_4_label"
        style="@style/MagickaCostsText"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@id/magicka_costs_3_label"
        android:text="4"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_4"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
