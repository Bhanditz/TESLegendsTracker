<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/deck_new_magicka_costs_heigth">

    <TextView
        android:id="@+id/magicka_costs_0_label"
        style="@style/MagickaCostsText"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:text="0"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_0"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
        android:layout_above="@id/magicka_costs_0_label"
        android:layout_alignStart="@id/magicka_costs_0_label"
        android:background="@drawable/xml_magicka_costs_bar"
        tools:layout_marginTop="@dimen/deck_new_magicka_costs_bar_min_height" />

    <TextView
        android:id="@+id/magicka_costs_1_label"
        style="@style/MagickaCostsText"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@id/magicka_costs_0_label"
        android:text="1"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_1"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
        android:layout_above="@id/magicka_costs_1_label"
