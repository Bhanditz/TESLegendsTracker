        android:text="6"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/magicka_costs_6"
        android:layout_width="@dimen/deck_new_magicka_costs_bar_width"
        android:layout_height="match_parent"
        android:layout_above="@id/magicka_costs_6_label"
