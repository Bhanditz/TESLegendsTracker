<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin"
    android:orientation="horizontal"
    tools:layout_marginTop="@dimen/status_bar_height">

    <LinearLayout
        android:layout_width="@dimen/new_match_class_icons_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/class_attr1"
            android:layout_width="@dimen/size_small"
            android:layout_height="@dimen/size_small"
            tools:src="@drawable/attr_strength" />

        <ImageView
            android:id="@+id/class_attr2"
            android:layout_width="@dimen/size_small"
            android:layout_height="@dimen/size_small"
            android:layout_marginStart="@dimen/small_margin"
            tools:src="@drawable/attr_intelligence" />

    </LinearLayout>

    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_small"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:gravity="center"
        android:textColor="@color/primary_text_dark"
        tools:text="Battlemage"
        tools:textColor="@android:color/white" />

</LinearLayout>