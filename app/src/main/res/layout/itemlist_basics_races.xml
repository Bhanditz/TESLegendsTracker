<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basics_races_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/basics_races_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Breton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/basics_races_arrow"
        android:layout_width="@dimen/size_medium"
        android:layout_height="@dimen/size_medium"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_forward_blue"
        app:layout_constraintBottom_toBottomOf="@+id/basics_races_card1"
        app:layout_constraintTop_toTopOf="@+id/basics_races_card1"
        app:layout_constraintStart_toStartOf="@+id/basics_races_name" />

    <ImageView
        android:id="@+id/basics_races_card1"
        android:layout_width="@dimen/card_width_nano"
        android:layout_height="@dimen/card_height_nano"
        android:layout_marginTop="8dp"
        android:src="@drawable/card_back"
        app:layout_constraintEnd_toStartOf="@+id/basics_races_card2"
        app:layout_constraintStart_toEndOf="@+id/basics_races_arrow"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/basics_races_name" />

    <ImageView
        android:id="@+id/basics_races_card2"
        android:layout_width="@dimen/card_width_nano"
        android:layout_height="@dimen/card_height_nano"
        android:layout_marginTop="0dp"
        android:src="@drawable/card_back"
        app:layout_constraintTop_toTopOf="@+id/basics_races_card1"
        app:layout_constraintEnd_toStartOf="@+id/basics_races_card3"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toEndOf="@+id/basics_races_card1" />

    <ImageView
        android:id="@+id/basics_races_card3"
        android:layout_width="@dimen/card_width_nano"
        android:layout_height="@dimen/card_height_nano"
        android:src="@drawable/card_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/basics_races_card1"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toEndOf="@+id/basics_races_card2" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basics_races_card1" />

</android.support.constraint.ConstraintLayout>