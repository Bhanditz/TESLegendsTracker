<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical|start"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/arena_draft_card_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/huge_margin"
        tools:src="@drawable/card" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/huge_margin">

        <TextView
            android:id="@+id/arena_draft_card_value_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_shadow_padding"
            android:paddingTop="@dimen/text_shadow_padding"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_huge"
            tools:text="56" />

        <TextView
            android:id="@+id/arena_draft_card_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_huge"
            android:text="56" />

    </FrameLayout>

    <ImageView
        android:id="@+id/arena_draft_arrow_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/huge_margin"
        android:src="@drawable/ic_arrow_forward_blue" />

</LinearLayout>