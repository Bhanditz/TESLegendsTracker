<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowBackground">@drawable/xml_bg</item>
        <item name="searchViewStyle">@style/SearchViewWithoutIcon</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAppearanceLarge">@style/AppDialog.TextAppearanceLarge</item>
    </style>

    <style name="AppDialog.TextAppearanceLarge" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppThemeTransparent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SearchViewWithoutIcon" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="RarityItem">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="StatisticsItem">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DeckInfoItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DeckInfoItemTime">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/large_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MagikaCostsText">
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/nano_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>

</resources>